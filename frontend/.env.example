# Firebase Configuration
# Copy this file to .env and fill in your Firebase project values
# Get these values from your Firebase project settings: https://console.firebase.google.com/

# SECRETS - These should be stored securely (e.g., in GitHub Secrets, Cloud Secret Manager)
VITE_FIREBASE_API_KEY=your-api-key-here
VITE_FIREBASE_APP_ID=your-app-id-here

# Regular Environment Variables - Can be committed or stored as regular env vars
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Emulator (optional)
# Set to "true" to use Firebase Auth emulator in development
VITE_USE_FIREBASE_EMULATOR=false

# API Configuration
VITE_API_BASE_URL=http://localhost:8080